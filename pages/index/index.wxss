/* pages/index/index.wxss */
.header_view{
  /* height: 25vh; */
  position: relative;
  width: 100%;
  transition: all 0.3s;
}
.index_view{
  overflow: hidden;
  height: 100vh;
}
.header_view image{
  position: absolute;
  width: 100%;
  z-index: 0;
}
.header_view_box{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
.mask{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 1;
  background-color: rgba(0,0,0,.3)
}
.header_box{
  position: absolute;
  top: 0;
  left: 0;right: 0;
  bottom: 0;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2;
}
.header_box .balance{
  height: 60%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 42rpx;
  opacity: 1;
  transition: all 0.3s;
  overflow: hidden
}
.header_box .balance>text:last-child{
  font-size: 28rpx;
}
.budget{
  width: 75%;
  height: 40%;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.budget>view{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.header_brows{
  position: absolute;
  bottom: -45rpx;
  width: 100%;
  z-index: 999;
}
/* log */
.log_list{

}
.brows{
  padding: 0 30rpx;
  box-sizing: border-box;  
  height: 50rpx;
  background-color: #F1F1F1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: rgb(88, 86, 86);
}
.brows>view:first-child .time{
  margin-right: 10rpx;
}

.li_item{
  height: 100rpx;
  background-color: #fff;
  margin-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #F5F5F5;
  display: flex;
  font-size: 30rpx;
  align-items: center;
  justify-content: space-between;
}
.list .li_item:last-child{
  border-bottom: 0;
}
.li_item .iconfont{
  width: 60rpx;
  height: 60rpx;
  background-color:#FFD700;
  font-size: 35rpx;
  display: flex;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
}
.remark{
  display: flex;
  align-items: center;
}
.type_item{
  margin-left: 25rpx;
}
.money{
  font-weight: bold;
}
.scrollView{
  height: 100vh;
}