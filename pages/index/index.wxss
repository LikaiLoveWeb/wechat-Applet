/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.swiper_box_img .slide-image{
  width: 100%;
}
.Data_box{
  margin: 30px 15px 0 15px;
}
.h3{
  font-weight: 500;
  font-family: '楷体'
}
.Youth{
  display: flex;
  width: 100%;
  justify-content: center;
  margin-top: 5px;
}
.Youth .Youth_left{
  flex: 1;
  margin-right: 8px;
}
.Youth .Youth_right{
  flex: 1;
  margin-left: 8px;
}
.Youth .Youth_img image{
  width: 100%;
  border-radius: 5px;
  height: 110px;
  vertical-align: bottom;
}
.Data_box_for .Youth{
  margin-bottom: 10px;
}
.Youth_img{
  overflow: hidden;
  position: relative
}
.Div{
  position: absolute;
  width: 100%;
  height: 20%;
  background: rgba(0,0,0,.5);
  bottom: 0;
  font-size: 12px;
  text-align: center;
  line-height: 23px;
  color: #ccc;
}